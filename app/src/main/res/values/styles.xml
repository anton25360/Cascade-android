<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Product Sans font -->
        <item name="android:fontFamily">@font/product_sans</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>


    </style>


    <!--toolbar theme-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="AppTheme.PopupTheme" >
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>


    <style name="customWhiteAccent" parent="AppTheme">
        <item name="colorAccent">@color/whiteAccentColour</item>
        <item name="colorControlActivated">@color/whiteAccentColour</item>
        <item name="colorControlHighlight">@color/whiteAccentColour</item>
        <item name="android:textColorHint">@color/whiteAccentColour</item>
        <item name="android:textColor">@color/whiteAccentColour</item>
        <item name="colorControlNormal">@color/whiteAccentColour</item>
        <item name="android:textColorPrimary">@color/whiteAccentColour</item>
    </style>

    <style name="customBlackAccent" parent="AppTheme">
        <item name="colorAccent">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>


    <!--login/signup progressbar-->
    <style name="customDialog" parent="AlertDialog.AppCompat">
        <item name="android:color">@color/lightBlue</item>
    </style>


</resources>
