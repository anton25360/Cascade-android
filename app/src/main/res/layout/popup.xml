<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SilverLight"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/popup_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:errorEnabled="true"
        app:counterEnabled="true"
        app:counterMaxLength="25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Description"
            android:maxLength="25"
            android:inputType="text" />

    </android.support.design.widget.TextInputLayout><!--desc input-->

    <TextView
        android:id="@+id/x1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Date: "
        android:textColor="@android:color/black"
        android:textSize="@dimen/popup_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popup_description" /> <!--date-->

    <TextView
        android:id="@+id/popup_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="October 30th, 2008"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/popup_text_size"
        app:layout_constraintStart_toEndOf="@id/x1"
        app:layout_constraintTop_toBottomOf="@id/popup_description" /> <!--october 30th-->

    <TextView
        android:id="@+id/x2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Time: "
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/popup_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popup_date" /> <!--time-->

    <TextView
        android:id="@+id/popup_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="20:00"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/popup_text_size"
        app:layout_constraintTop_toTopOf="@id/x2"
        app:layout_constraintStart_toEndOf="@id/x2" /> <!--20:00-->
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:textColor="@android:color/black"
        android:textSize="@dimen/popup_text_size"
        app:layout_constraintTop_toTopOf="@id/x2"
        app:layout_constraintStart_toEndOf="@id/popup_time"
        app:layout_constraintEnd_toStartOf="@id/popup_timeAllDay"/> <!--or-->

    <TextView
        android:id="@+id/popup_timeAllDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:text="All Day"
        android:textSize="@dimen/popup_text_size"
        app:layout_constraintTop_toTopOf="@id/x2"
        app:layout_constraintEnd_toStartOf="@id/popup_checkbox"/> <!--all day-->

    <CheckBox
        android:id="@+id/popup_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/x2"
        app:layout_constraintBottom_toBottomOf="@id/popup_timeAllDay"
        app:layout_constraintEnd_toEndOf="parent"/> <!--all day checkbox-->



    <Button
        android:id="@+id/popup_cancel"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/btn_delete"
        android:text="Cancel"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" /> <!--cancel-->


    <Button
        android:id="@+id/popup_addTaskTEMP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="add"/> <!--add task-->




    <TextView
        android:id="@+id/x3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Gradients:"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/popup_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popup_time" /> <!--gradients: -->

    <HorizontalScrollView
        android:id="@+id/popup_scrollGradients"
        app:layout_constraintTop_toBottomOf="@id/x3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/popup_buttonBlue"
                android:layout_margin="@dimen/popup_colourButton_margin"
                android:layout_width="@dimen/popup_colourButton_size"
                android:layout_height="@dimen/popup_colourButton_size"

                android:background="@drawable/gradient_blue_checked" /> <!--blue-->

            <Button
                android:id="@+id/popup_buttonOrange"
                android:layout_margin="@dimen/popup_colourButton_margin"
                android:layout_width="@dimen/popup_colourButton_size"
                android:layout_height="@dimen/popup_colourButton_size"
                android:background="@drawable/gradient_orange_unchecked"/> <!--orange-->

            <Button
                android:id="@+id/popup_buttonGreen"
                android:layout_margin="@dimen/popup_colourButton_margin"
                android:layout_width="@dimen/popup_colourButton_size"
                android:layout_height="@dimen/popup_colourButton_size"
                android:background="@drawable/gradient_green_unchecked" /> <!--green-->

            <Button
                android:id="@+id/popup_buttonRed"
                android:layout_margin="@dimen/popup_colourButton_margin"
                android:layout_width="@dimen/popup_colourButton_size"
                android:layout_height="@dimen/popup_colourButton_size"
                android:background="@drawable/gradient_red_unchecked"/> <!--red-->

            <Button
                android:id="@+id/popup_buttonPurple"
                android:layout_margin="@dimen/popup_colourButton_margin"
                android:layout_width="@dimen/popup_colourButton_size"
                android:layout_height="@dimen/popup_colourButton_size"
                android:background="@drawable/gradient_purple_unchecked" /> <!--purple-->

            <Button
                android:id="@+id/popup_buttonPeach"
                android:layout_margin="@dimen/popup_colourButton_margin"
                android:layout_width="@dimen/popup_colourButton_size"
                android:layout_height="@dimen/popup_colourButton_size"
                android:background="@drawable/gradient_peach_unchecked"/> <!--peach-->

        </LinearLayout> <!--horizontal layout containing the buttons-->

    </HorizontalScrollView> <!--coloured buttons selection-->


</android.support.constraint.ConstraintLayout>
