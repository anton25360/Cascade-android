<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/widget_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tabSub_ring"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_ring_sub"
        app:layout_constraintTop_toTopOf="@id/tabSub_title"
        app:layout_constraintBottom_toBottomOf="@id/tabSub_title"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tabSub_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="3dp"
        android:text="sub item 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tabSub_ring"
        android:textColor="@color/black" />


</android.support.constraint.ConstraintLayout>