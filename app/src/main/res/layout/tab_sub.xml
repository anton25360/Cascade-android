<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/widget_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.uniquestudio.library.CircleCheckBox
        android:id="@+id/tabSub_checkBox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        app:background_color="@android:color/transparent"
        app:border_color="@color/Silver"
        app:checked="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tick_color="@color/black"/>

    <TextView
        android:id="@+id/tabSub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:text="sub item 1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tabSub_checkBox"
        app:layout_constraintStart_toEndOf="@+id/tabSub_checkBox"
        app:layout_constraintTop_toTopOf="@+id/tabSub_checkBox" />

</android.support.constraint.ConstraintLayout>