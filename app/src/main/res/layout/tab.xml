<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/widget_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/tab_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:text="sub item 1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tab_checkbox"
        app:layout_constraintStart_toEndOf="@+id/tab_checkbox"
        app:layout_constraintTop_toTopOf="@+id/tab_checkbox" />

</android.support.constraint.ConstraintLayout>