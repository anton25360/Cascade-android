<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/widget_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginBottom="9dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.uniquestudio.library.CircleCheckBox
        android:id="@+id/tab_checkBox"
        app:checked="false"
        app:border_color="@color/Silver"
        app:background_color="@color/white"
        app:tick_color="@color/black"
        android:padding="1dp"
        android:layout_width="23dp"
        android:layout_height="23dp"
        app:layout_constraintTop_toTopOf="@id/tab_title"
        app:layout_constraintBottom_toBottomOf="@id/tab_title"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tab_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="sub item"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/tab_delete"
        app:layout_constraintStart_toEndOf="@+id/tab_checkBox" />

    <Button
        android:id="@+id/tab_delete"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:padding="2dp"
        android:background="@drawable/ic_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tab_title"
        app:layout_constraintBottom_toBottomOf="@id/tab_title"/>

</android.support.constraint.ConstraintLayout>